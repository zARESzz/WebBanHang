                                    <div class="button-wrap"><a class="button button-xs button-secondary button-winona" href="/Products/Detail/@item.Id">Chi Tiết</a></div>
                                </div><span class="product-badge product-badge-new">Hot</span>
                            </article>
                        </div>
                    }

                    if (item.IsSale)
                    { <div class="col-sm-6 col-lg-4 col-xl-3">
                            <!-- Product-->
                            <article class="product wow fadeInLeft" data-wow-delay=".15s">
                                <div class="product-figure">
