                                    <br />
                                    <div class="product-price">@Common.FormatNumber(item.PriceSale, 0)</div>
                                </div>
                                <div class="product-button">
                                    <div class="button-wrap"><a class="button button-xs button-primary button-winona btnAddToCart" data-id="@item.Id" href="#">Thêm vào giỏ hàng</a></div>
                                    <div class="button-wrap"><a class="button button-xs button-secondary button-winona" href="/Products/Detail/@item.Id">Chi Tiết</a></div>
                                </div><span class="product-badge product-badge-sale">Sale</span>
